<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container" ng-app="gymFitness" >
    <main>
      <div class="container loginContainer" >
        <div class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in"></span> <%= title %></h1>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input placeholder="שם משתמש" type="text" class="form-control" name="username" required>
                </div>
                <div class="form-group input-group">
                     <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" placeholder="סיסמה" class="form-control" name="password" required>
                </div>
                <!-- show any messages that come back with authentication -->
                <% if (message.length) { %>
                    <div class="invalid"><%= message %></div>
                <% } %>
                <input type="submit" name="login" class="loginSubmit" value="כניסה">
            </form>
            <hr>
        </div>       
      <div>
    </main>
    <footer>
        <% include ../partials/footer %>
    </footer>
</body>
</html>